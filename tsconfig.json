{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"types": ["vinxi/types/client", "@testing-library/jest-dom"],
		"isolatedModules": true,
		"skipLibCheck": true,
		"paths": {
			"~/*": ["./src/*"],
			"solid-mdx": ["./node_modules/solid-mdx/types/index.d.ts"],
			"@vinxi/plugin-mdx": ["./node_modules/@vinxi/plugin-mdx/dist/index.d.ts"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
