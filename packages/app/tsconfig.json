{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "@hkviz/parser": ["../parser/src/index.ts"],
            "@hkviz/hk-data": ["../hk-data/src/index.ts"],
            "@hkviz/viz": ["../viz/src/index.ts"]
        },
        "types": ["@types/dom-view-transitions"],
        "plugins": [
            {
                "name": "next"
            }
        ],
        "incremental": true
    },
    "include": [".eslintrc.cjs", "next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
