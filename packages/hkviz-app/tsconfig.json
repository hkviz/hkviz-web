{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "@hkviz/parser": ["../hkviz-parser/src"]
        },
        "types": ["@types/dom-view-transitions"],
        "plugins": [
            {
                "name": "next"
            }
        ],
        "incremental": true
    },
    "include": [
        ".eslintrc.cjs",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.cjs",
        "**/*.mjs",
        // ".next/types/**/*.ts",
        "src/app/privacy-policy/page.mdx",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
