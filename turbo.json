{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist"],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "public/**",
                "next.config.js",
                "tsconfig.json",
                "package.json",
                "package-lock.json"
            ]
        },
        "deploy": {
            "dependsOn": ["build", "lint"]
        },
        "test": {
            "dependsOn": ["build"],
            "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
